{% extends 'base.html.twig' %}

{% block title %}Hello Movie!{% endblock %}

{% block body %}

    <div class="container">
        <h1>Movies</h1>

        {% for movie in movies %}
            <a href="{{ path('movie_show', {'id': movie.id}) }}">
                <div>
                    <h2>{{ movie.title }}</h2>
                    <p>{{ movie.date|date('Y') }}</p>
                    <img src="{{ movie.poster }}" alt="Poster of {{ movie.title }}"/>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
